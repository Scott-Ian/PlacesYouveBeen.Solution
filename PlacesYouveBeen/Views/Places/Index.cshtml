@using PlacesYouveBeen.Models;

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Your Travel Diary Home</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>

  <body>
    <div class="container">
      <div class="page-header">
        <h1>Places You've Been</h1>
      </div>

      @if (Model.Count == 0)
      {
        <p>You haven't been anywhere!</p>
      }
      else
      {
        <ul>
          @foreach(Place place in Model)
          {
            <li><a href="/place/@place.Id">@place.CityName</a></li>
          }
        </ul>
      }

    <a href="/">Back To Home</a>
    </div>
  </body>
</html>